@model CRUD.Models.Person

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Person</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <hr />
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <input type="hidden" asp-for="Id" class="form-control" />

            <div class="form-group">
                <label asp-for="NameFirst" class="control-label"></label>
                <input asp-for="NameFirst" class="form-control" />
                <span asp-validation-for="NameFirst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameLast" class="control-label"></label>
                <input asp-for="NameLast" class="form-control" />
                <span asp-validation-for="NameLast" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Subscribed" /> @Html.DisplayNameFor(model => model.Subscribed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

