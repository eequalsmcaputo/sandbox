@model Razor.Models.Product
@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
    <body>
        <div class="container">
            <br /><br />

            <br />
            <p><b>Name:</b> @Model.Name</p>
            <p><b>Price:</b> $@Model.Price</p>
            <p><b>Qty:</b> @ViewBag.Qty</p>

            <br />

            <div data-id="@Model.Id" class="@Model.Name">HTML Attributes</div>

            <hr />

            @if(ViewBag.Qty < 3)
            {
                @: Quantity is below 3.
            } else if (ViewBag.Qty == 4)
            {
                @: Quantity is @ViewBag.Qty.
            } else
            {
                @: Quantity is above 4.
            }

            <br />

            @switch(ViewBag.Qty)
            {
                case 0:
                case 1:
                case 2:
                case 3:
                    @: Quantity is below 4.
                    break;
                case 4:
                    @: Quantity is @ViewBag.Qty.
                    break;
                default:
                    @: Quantity is above 4.
                    break;
            }
        </div>
    </body>
</html>
    
